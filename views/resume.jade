#resume
       
  #contact
    h1 Conner Petzold
    
    div
      strong phone
    span.phone= resume.contact.phone

    div
      strong email
    a(href='mailto:'+resume.contact.email).email= resume.contact.email
    
    div(style='margin-top: 30px')
      span Prefer looking at json?
      br
      a(href='/résumé.json') /résumé.json
  
  h2 Experience
  #experience
    - resume.experience.forEach(function(job){
      h3= job.title
      h4= job.company
      
      span.setting
        strong= job.from + ' - ' + job.to + ' '
        span  • 
        em= job.location
      
      ul.tags
        - job.tags.sort().forEach(function(tag){
          li= tag
        - })
        
      ul.points
        - job.points.forEach(function(point){
          li= point
        - })
      
    - })
    
  h2 Education
  #education
    h3= resume.education.degree
    h4= resume.education.name

    span.setting
      strong= resume.education.from + ' - ' + resume.education.to + ' '
      span  • 
      em= resume.education.location
