@import 'frameless'

fstack = 'Lucida Grande', Tahoma, Verdana, Arial, sans-serif

cbg = #fff
ctext = #343646
cprimary = #343646
csecondary = #ACC1E8
clighter = #f3f3f3
clight = #e3e3e3
cmed = #a3b6c0
cdark = #70777f

@media screen and (max-width: 1440px)
  .container
    cols: 10
    
@media screen and (max-width: 800px)
  .container
    cols: 8

@media screen and (max-width: 600px)
  .container
    cols: 6

@media screen and (max-width: 400px)
  .container
    cols: 4

.clear
  clear: both

body
  font-family: fstack
  color: ctext
  background: #fff
  -webkit-tap-highlight-color: rgba(csecondary, 0.62)
  
footer
  margin-top: 2.5em
  background: #333
  color: #eee
  border-top: 0.5em solid #eee
  .copyright
    float: right
    margin: 2em 0
    font-size: 0.8em
  a
    color: #ACC1E8
  
.container
  margin: auto
  
::selection,
::-moz-selection
  background: #eee
  
pre code
  &::selection,
  &::-moz-selection,
  span::selection,
  span::-moz-selection
    background: #777

img::selection,
img::-moz-selection
  background: transparent
  
a
  text-decoration: none
  color: ctext
  
h1, h2, h3, h4
  font-weight: normal
  margin: 1em 0 0.3em
  color: #000
  
.comments
  form
    margin-top: 2em
  input[type='text'],
  textarea
    display: block
    margin: 1em 0
    font-size: 0.8em
    padding: 0.4em
    border: 1px solid #ccc
    &:focus
      border: 1px solid #999
      outline-width: 0
  input[type='text']
    width: 40%
    min-width: 278px
  textarea
    resize: vertical
    width: 100%
    min-height: 4em
    max-height: 10em
  > .comment
    position: relative
    min-height: 3.5em
    font-size: 0.95em
    line-height: 1.5em
    padding-left: 4em
    margin-top: 1.5em
    text-align: justify
    .avatar
      position: absolute
      left: 0
      top: 3px
      width: 3em
    .name
      margin-right: 0.8em
    header
      margin-bottom: 0.5em
    time
      color: #bbb
    
.post
  > header
    margin: 1em 0 0.8em
    h1
      font-size: 2em
      margin: 0
      color: cprimary
    time,
    .numComments
      display: inline-block
      font-size: 0.7em
      padding: 0.4em 0.6em
      margin: 0.3em 0.3em 0 0
      color: cbg
    time
      background: darken(csecondary, 5%)
      border-bottom: 0.1em solid darken(csecondary, 50%)
    .numComments
      background: lighten(red, 40%)
      border-bottom: 0.1em solid darken(red, 40%)
      &:hover
        background: lighten(red, 20%)
  p
    line-height: 1.8em
    text-align: justify
  h1
    font-size: 1.4em
  h2
    font-size: 1.2em
  h3
    font-size: 1em
    font-weight: bold
    
.body
  margin-bottom: 1.5em
  padding-bottom: 1.5em
  border-bottom: 0.5em solid #f8f8f8
  
#logo .text
  font-weight: bold
  
nav
  width: 100%
  height: 74px
  margin: 1em 0 2em
  overflow: hidden
nav ul
  position: static
  width: 3000px
  margin: 0
  padding: 0
  .text
    font-size: 1.2em
  
  .num, .cap
    font-size: 0.7em
    color: cmed
 
  li
    display: inline-block
    list-style-type: none
  
    .empty
      opacity: 0.3
    a, .empty
      display: inline-block
      cols: 2
      height: 70px
      margin-right: unit((24/16), 'em')
      vertical-align: top
      color: ctext
      background: clighter
      border-bottom: 4px solid clight
      .in
        padding: 8px 15px 10px 15px
      &:hover
        border-color: cmed
        .text
          color: black
        .num::after
          content: ' Â¬'
    
    span
      display block    
    
pre code
  display: block
  padding: 1.3em 1.5em
  margin: 1em 0
  font-family: 'Andale Mono', 'Lucida Console', Consolas, monospace
  font-size: 0.9em
  line-height: 1.5em
  background: #303030
  color: #bbb
  border-bottom: 0.5em solid #222

  .keyword, .literal, .change, .winutils, .flow, .lisp .title, .tex .special
    color: white

  .string, .function .title, .class .title,
  .haskell .label, .ini .title, .tag .value,
  .css .rules .value,
  .processor,
  .ruby .symbol, .ruby .symbol .string, .ruby .symbol .keyword,
  .ruby .symbol .keymethods, .ruby .instancevar, .ruby .class .parent,
  .built_in, .sql .aggregate,
  .django .template_tag, .django .variable,
  .attr_selector, .pseudo, .addition, .stream, .envvar,
  .apache .tag, .apache .cbracket,
  .tex .command, .input_number
    color: csecondary

  .comment, .java .annotation, .python .decorator,
  .template_comment, .pi, .doctype, .deletion,
  .shebang, .apache .sqbracket, .tex .formula
    color: #777


  .keyword,
  .css .id,
  .phpdoc,
  .function .title,
  .class .title,
  .haskell .label,
  .vbscript .built_in,
  .sql .aggregate,
  .rsl .built_in,
  .smalltalk .class,
  .xml .tag .title,
  .diff .header,
  .chunk,
  .winutils,
  .bash .variable,
  .lisp .title,
  .apache .tag,
  .tex .special
    color: white
    
  .literal
    color: #ff5a5a

  .xml .css,
  .xml .javascript,
  .xml .vbscript,
  .tex .formula
    opacity: 0.5;
