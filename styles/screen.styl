fstack = 'Lucida Grande', Tahoma, Verdana, Arial, sans-serif

cbg = #fff
ctext = #343646
cprimary = #343646
csecondary = #ACC1E8
clighter = #f3f3f3
clight = #e3e3e3
cmed = #a3b6c0
cdark = #70777f

cred = #F66
cgreen = #9dcd69
cblue = #9CB5E4

.clear
  clear: both

body
  margin: 0
  font-family: fstack
  color: ctext
  background: #fff
  -webkit-tap-highlight-color: rgba(csecondary, 0.62)
  
footer
  margin-top: 2.5em
  background: #333
  color: #eee
  border-top: 0.5em solid #eee
  .copyright
    float: right
    margin: 2em 0
    font-size: 0.8em
  a
    color: #ACC1E8
  
.container
  padding: 1.5em 3em
  max-width: 800px
  min-width: 600px
  margin: auto
  
fieldset
  margin: 0
  padding: 0
  border: none
  
::selection,
::-moz-selection
  background: #eee
  
pre code
  overflow: scroll
  &::selection,
  &::-moz-selection,
  span::selection,
  span::-moz-selection
    background: #777

img::selection,
img::-moz-selection
  background: transparent
 
p
  margin: 0
a
  text-decoration: none
  color: ctext
  
h1, h2, h3, h4
  font-weight: normal
  padding: 1em 0 0.3em
  margin: 0
  color: #000
  
.comments
  code
    overflow: scroll
    padding: 0.8em 1.4em
  form
    margin-top: 2em
  input[type='text'],
  textarea
    display: block
    margin: 1em 0
    font-size: 0.8em
    padding: 0.4em
    border: 1px solid #ccc
    &:focus
      border: 1px solid #999
      outline-width: 0
  input[type='text']
    width: 40%
    min-width: 278px
  textarea
    resize: vertical
    width: 100%
    min-height: 4em
    max-height: 10em
  > .comment
    position: relative
    min-height: 3.5em
    font-size: 0.95em
    line-height: 1.5em
    padding: 1.5em 0 0 4em
    text-align: justify
    .avatar
      position: absolute
      left: 0
      top: 1.65em
      width: 3em
    .name
      margin-right: 0.8em
    header
      margin-bottom: 0.5em
    time
      color: #bbb
    
.post,
.page
  > header
    margin: 1em 0 1em
    h1
      font-size: 2em
      padding: 0
      color: cprimary
      &:hover
        color: #000
    time,
    .numComments,
    .tag
      display: inline-block
      font-size: 0.7em
      padding: 0.4em 0.6em
      margin: 1em 0.3em 0 0
      color: cbg
    time
      background: cblue
      border-bottom: 0.1em solid darken(cblue, 20%)
    .numComments
      background: cred
      border-bottom: 0.1em solid darken(cred, 30%)
      &:hover
        background: darken(cred, 10%)
        border-color: darken(cred, 40%)
    .tag
      background: #eee
      color: #aaa
      border-bottom: 0.1em solid #aaa
      &:hover
        background: #ddd
        color: #888
      &.active
        background: cgreen
        color: #fff
        border-bottom: 0.1em solid darken(cgreen, 30%)
      
  p
    line-height: 1.8em
    text-align: justify
  h1
    font-size: 1.4em
  h2
    font-size: 1.2em
  h3
    font-size: 1em
    font-weight: bold
    
.body
  margin-bottom: 1.5em
  padding-bottom: 1.5em
  border-bottom: 0.5em solid #f8f8f8
  
#logo .text
  font-weight: bold
  
nav
  margin-bottom: 2.5em
nav ul
  display: block
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  .text
    font-size: 1.2em
  .num, .cap
    font-size: 0.7em
    color: cmed
  li
    display: block
    list-style-type: none
    float: left
    width: 20%
    .empty
      opacity: 0.3
    a, .empty
      display: block
      width: 100%
      height: 70px
      margin-right: unit((24/16), 'em')
      vertical-align: top
      color: ctext
      .in
        padding: 8px 15px 10px 15px
        background: clighter
        height: 80%
        margin-right: 0.5em
        border-bottom: 0.2em solid clight
      &:hover
        border-color: cmed
        .text
          color: black
        .num::after
          content: ' Â¬'
    
    span
      display block
    
pre code,
.CodeMirror
  display: block
  padding: 1.3em 1.5em
  margin: 1em 0
  font-family: 'Andale Mono', 'Lucida Console', Consolas, monospace
  font-size: 0.9em
  line-height: 1.5em
